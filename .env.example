# OpenAI API Configuration
OPENAI_API_KEY_1=your_openai_api_key_1
OPENAI_API_KEY_2=your_openai_api_key_2
OPENAI_API_KEY_3=your_openai_api_key_3
OPENAI_MODEL=gpt-4o

# Database Configuration
DB_PASSWORD=your_secure_database_password
POSTGRES_URL=postgresql://classifier:your_secure_database_password@postgres:5432/classifier_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_password

# Instance Configuration
INSTANCE_ID=classifier-1
FLASK_ENV=production

# Multi-LLM Provider Configuration (for advanced scaling)
# Anthropic
ANTHROPIC_API_KEY_1=your_anthropic_api_key_1
ANTHROPIC_API_KEY_2=your_anthropic_api_key_2

# Google Gemini
GOOGLE_API_KEY_1=your_google_api_key_1
GOOGLE_API_KEY_2=your_google_api_key_2

# Rate Limiting Configuration
MAX_REQUESTS_PER_MINUTE=1000
MAX_CONCURRENT_REQUESTS=50

# Cache Configuration
CACHE_TTL_HOURS=24
CACHE_MAX_MEMORY_MB=512

# Celery Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Security Configuration
SECRET_KEY=your_flask_secret_key
JWT_SECRET_KEY=your_jwt_secret_key

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=7
