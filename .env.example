# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_GPT4O_API_KEY=your_openai_gpt4o_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Backup LLM Providers (Optional - for redundancy)
GOOGLE_API_KEY=your_google_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_claude_api_key_here

# Redis Configuration (for caching and async processing)
REDIS_URL=redis://localhost:6379/0

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/classifier_db

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Scaling Configuration
CONFIDENCE_THRESHOLD=0.8
MAX_RETRIES=3
CIRCUIT_BREAKER_TIMEOUT=300

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO
